@model QLHD.Models.Event

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/index.cshtml";
}

<h2>THÔNG TIN CHI TIẾT HOẠT ĐỘNG</h2>

<div class="Details">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã hoạt động
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idEvent)
        </dd>
        <dt>
            Tên hoạt động
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eventName)
        </dd>
        <dt>
            Ngày bắt đầu đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateRegister)
        </dd>

        <dt>
            Ngày kết thúc đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateEndRegister)
        </dd>

        <dt>
            Ngày diễn ra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateStart)
        </dd>

        <dt>
            Ngày kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateEnd)
        </dd>

        <dt>
            Loại hoạt động
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventType.typename)
        </dd>

        <dt>
            Đơn vị tổ chức
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Oganizer.name)
        </dd>

        <dt>
            Họ kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester.name)
        </dd>

        <dt>
            Khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Falcuty.name)
        </dd>

        <dt>
            Lớp
        </dt>

        <dd>
            @if (Model.Class.name == null)
            {
                <p>Trống</p>
            }
            else
            {
                @Html.DisplayFor(model => model.idClass)
            }

        </dd>

        <dt>
            SL cho đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentNumber)
        </dd>

        <dt>
            SL đã đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Registation)
        </dd>

        <dt>
            SL đã tham gia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendant)
        </dd>

        <dt>
            Địa điểm tổ chức
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.content)
        </dd>

    </dl>
</div>
<div class="EditBack">
    <a class="Edit" href="@Url.Action("Edit", "Admin",new { id = Model.idEvent })"><span class="glyphicon glyphicon-pencil"></span><p style="font-size:15px"> ĐIỀU CHỈNH</p></a> |
    <a class="Back" href="@Url.Action("DSHD","Admin")"><span class="glyphicon glyphicon-circle-arrow-left"></span><p style="font-size:15px"> TRỞ VỀ</p></a>
</div>
<p></p>
<div>
    <a class="Edit" href="@Url.Action("DSSVTG", "Admin",new { idEvent = Model.idEvent })"><span class="glyphicon glyphicon-pencil"></span><p style="font-size:15px">Thông tin sinh vien tham gia hoạt đông</p></a>
</div>
   