@model QLHD.Models.EventStudentList

@{
    ViewBag.Title = "EditSV";
    Layout = "~/Views/Shared/index.cshtml";
}

<h2>EditSV</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EventStudentList</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2">ID</label>
            <div id="id" name="id" class="col-md-10" style="padding-top:8px">
                @Model.id
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">MSSV</label>
            <div id="idStudent" name="idStudent" class="col-md-10" style ="padding-top:8px">
                @Model.idStudent
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hoạt động</label>
            <div class="col-md-10">
                @Html.DropDownList("idEvent")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Xác nhận tham gia</label>
            <div class="col-md-10" style ="padding-top:8px">
                @if(@Model.FalcutyConfirmed.Value==true){
                <input type="checkbox" name="chon" value="true" checked onclick="myfunc"><br>
                }
                else
                {
                    <input type="checkbox" name="chon" value="false" onclick="myfunc"><br>
                }
    
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="Luu" type="submit" value="Lưu" class="btn btn-default" style="background-color:lightseagreen;color:white;font-family:Tahoma;" />
            </div>
        </div>
    </div>
}

<div class="EditBack">
    <a class="Back" href="@Url.Action("DSSVTG","Admin",new { idEvent = Model.idEvent })"><span class="glyphicon glyphicon-circle-arrow-left"></span><p>TRỞ VỀ</p></a>
</div>
