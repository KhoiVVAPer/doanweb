@model QLHD.Models.Event

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/index.cshtml";
}

<h2>THÊM HOẠT ĐỘNG MỚI</h2>
@ViewData["Error"]
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên hoạt động</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.eventName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.eventName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày bắt đầu đăng ký</label>
            <div class="col-md-10">
                <input type="date" name="dateRegister" />
                @Html.ValidationMessageFor(model => model.dateRegister, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày kết thúc đăng ký</label>
            <div class="col-md-10">
                <input type="date" name="dateEndRegister" />
                @Html.ValidationMessageFor(model => model.dateEndRegister, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày diễn ra</label>
            <div class="col-md-10">
                <input type="date" name="dateStart" />
                @Html.ValidationMessageFor(model => model.dateStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày kết thúc</label>
            <div class="col-md-10">
                <input type="date" name="dateEnd" />
                @Html.ValidationMessageFor(model => model.dateEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Loại hoạt động</label>
            <div class="col-md-10">
                @Html.DropDownList("idType")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Đơn vị tổ chức</label>
            <div class="col-md-10">
                @Html.DropDownList("idOganizer")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Học kỳ</label>
            <div class="col-md-10">
                @Html.DropDownList("idSemester")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Khoa</label>
            <div class="col-md-10">
                @Html.DropDownList("idFalcuty")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Lớp</label>
            <div class="col-md-10">
                @Html.DropDownList("idClass")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">SL cho đăng ký</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.studentNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.studentNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa điểm tổ chức</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nội dung</label>
            <div class="col-md-10">
                <textarea class="form-control" rows="5" id="content" name="content"></textarea>
                @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận tạo mới" class="btn btn-default" style="background-color:lightseagreen;color:white;font-family:Tahoma;" />
            </div>
        </div>
    </div>
}

<div class="EditBack">
    <a class="Back" href="@Url.Action("DSHD","Admin")"><span class="glyphicon glyphicon-circle-arrow-left"></span><p>TRỞ VỀ</p></a>
</div>
