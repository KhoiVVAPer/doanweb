@model QLHD.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/index.cshtml";
}

<h2>XÓA SINH VIÊN</h2>

<h3>Bạn có chắc muốn xóa sinh viên này?</h3>
<div class="Delete">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            MSSV
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idStudent)
        </dd>
        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dob)
        </dd>

        <dt>
            Lớp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class.name)
        </dd>

        <dt>
            Khóa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idCourse)
        </dd>

        <dt>
            Là ban cán sự?
        </dt>

        <dd>
            @if (Model.idType == true)
            {
                @Html.Display("Có")
            }
            else
            {
                @Html.Display("Không")
            }
        </dd>

        <dt>
            Khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Falcuty.name)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.andress)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            SDT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận xóa" class="btn btn-default" style="background-color:lightseagreen;color:white;font-family:Tahoma;margin-left:450px" />
        </div>
        <p></p>
        <div class="EditBack">
            <a class="Back" href="@Url.Action("Index","AdminSV")"><span class="glyphicon glyphicon-circle-arrow-left"></span><p>TRỞ VỀ</p></a>
        </div>
    }
</div>
