                        <li><a href="/AdminNV/Index">Tài khoản nhân viên</a></li>

                    </ul>
                </li>
				<li class="slidebar-menu-item">
					<a href="#">
						<span class="glyphicon glyphicon-user"></span><p>Thông tin tài khoản</p>
					</a>
				</li>
				<li class="slidebar-menu-item">
					<a href="#">
						<span class="glyphicon glyphicon-cog"></span><p>Hổ trợ</p>
					</a>
				</li>
			</ul>
		</div>

        <div class="page-content-wrapper">
                @RenderBody()
              
            </div>
        </div>
	</div>
</body>
</html>